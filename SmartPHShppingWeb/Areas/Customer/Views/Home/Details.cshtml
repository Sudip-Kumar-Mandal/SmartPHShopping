@model Product

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-black text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Name</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Manufacturer</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-dark mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge bg-warning">@Model.Category.Name</span>
                        </div>
                        
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50  pb-2">
                                Price:
                                <span class="text-decoration-line-through">
                                    @Model.ListPrice
                                </span>
                                <span class="">
                                    @Model.Price
                                </span>
                            </h6>
                        </div>
                
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(@Model.Description)</p>
                        </div>

                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-black text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button id="buy-button" type="submit" class="btn bg-black text-white w-100 py-3 text-uppercase">
                                    BUY!
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>