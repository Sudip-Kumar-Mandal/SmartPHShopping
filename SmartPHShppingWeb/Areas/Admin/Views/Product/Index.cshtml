@model List<Product>

<div class="container-fluid">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-black">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a id="AdminProductCreateView" asp-controller="Product" asp-action="Upsert" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Description</th>
                <th>Manufacturer</th>
                <th>List Price</th>
                <th>Discouted Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>@obj.Manufacturer</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Price</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>